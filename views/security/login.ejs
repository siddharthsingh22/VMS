<%- include("../partials/header_security", {loggedIn : false}) %>
<div class="container">
	<div class="row" style="display: flex; justify-content: center;">
		<div class="col-md-5">
			<div id="login-box" class="p-3 pb-4 mt-5">
				<h1 class="display-4 mb-4 text-center" style="color: white;font-size: 3.4rem; font-weight: 500">Login</h1>
				<form action="/security/login" method="POST" style="width: 100%;">
					<% if(error){ %>
					<div class="alert alert-danger text-center" role="alert">
						<%= error %>
					</div>
					<% } %> <% if(success){ %>
					<div class="alert alert-success text-center" role="alert">
						<%= success %>
					</div>
					<% } %>
					<div class="form-group">
						<input id="form-input" type="text" name="login[id]" placeholder="Security Id" class="form-control" required />
					</div>
					<div class="form-group">
						<input id="form-input" type="password" name="login[password]" placeholder="Password" class="form-control" required />
					</div>

					<button type="submit" class="btn btn-block btn-success mt-4">
						Login
					</button>
				</form>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
