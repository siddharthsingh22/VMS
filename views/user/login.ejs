<%- include("../partials/header", {loggedIn : false}) %>
<div class="container">
	<div class="row" style="display: flex; justify-content: center; height: 200%;">
		<div class="col-md-5">
			<div id="login-box" class="p-3 pb-4 mt-5 ">
				<h1 class="display-4 mb-4 text-center" style="color: white; font-size: 3.4rem; font-weight: 500">Login</h1>
				<form action="/user/login" method="POST" style="width: 100%;">
					<% if(error){ %>
					<div class="alert alert-danger text-center" role="alert">
						<%= error %>
					</div>
					<% } %> <% if(success){ %>
					<div class="alert alert-success text-center" role="alert">
						<%= success %>
					</div>
					<% } %>
					<div class="form-group">
						<input id="form-input" type="text" name="login[email]" placeholder="Email Address" class="form-input form-control" required />
					</div>
					<div class="form-group">
						<input type="password" id="form-input" name="login[password]" placeholder="Password" class="form-control" required />
					</div>

					<div style="display: flex; justify-content: center; align-items: center;">
						<button type="submit" class="btn btn-success">
							Login
						</button>
						<a id="register-btn" href="/user/register" class="btn btn-info">Register</a>
					</div>

					<div style="display: flex; justify-content: center;" class="mt-2">
						<a id="forgot-btn" href="/user/reset" class=" text-center">Forgot Password</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
