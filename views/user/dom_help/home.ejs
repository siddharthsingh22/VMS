<%- include("../../partials/header", {loggedIn : true}) %>

<div class="container">
	<div style="max-width: 100%; overflow: auto;">
		<table class="table mt-3 table-hover table-active">
			<thead class="thead-dark">
				<tr>
					<th scope="col" class="text-center">Id No.</th>
					<th scope="col" class="text-center">Name</th>
					<th scope="col" class="text-center">Date</th>
					<th scope="col" class="text-center">Check In</th>
					<th scope="col" class="text-center">Check Out</th>
					<th scope="col" class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% regDom_HelpArray.forEach((eachRegDom_HelpId) => { %> <% returnedDom_HelpDataFromDb.forEach((eachDom_HelpData) => { %> <% if(eachDom_HelpData.id === eachRegDom_HelpId){ %> <% const
				len = eachDom_HelpData.timeStamps.length %>
				<tr>
					<th scope="row" class="text-center"><%= eachDom_HelpData.id %></th>
					<td class="text-center"><%= eachDom_HelpData.name %></td>
					<% if(len !== 0){ %>
					<td class="text-center">
						<%= eachDom_HelpData.timeStamps[len-1].date %>
					</td>

					<td class="text-center">
						<%= eachDom_HelpData.timeStamps[len-1].checkIn %>
					</td>
					<td class="text-center"><%= eachDom_HelpData.timeStamps[len-1].checkOut %></td>
					<% } %> <% if(len === 0){ %>
					<td class="text-center"></td>

					<td class="text-center"></td>
					<td class="text-center"></td>
					<% } %>

					<td class="text-center">
						<a href="/user/dom_help/show/<%= eachDom_HelpData.id %>" class="text-dark" data-toggle="tooltip" data-placement="top" title="View Domestic Help Data"
							><i class="fas fa-info-circle mr-3"></i
						></a>
						<a href="/user/dom_help/delete/<%= eachDom_HelpData.id %>" class="text-dark" data-toggle="tooltip" data-placement="top" title="Delete Domestic From List"
							><i class="fas fa-trash-alt"></i
						></a>
					</td>
				</tr>
				<% } %> <% }) %> <% }) %>
			</tbody>
		</table>
	</div>
	<div style="display: flex; justify-content: flex-end;">
		<a href="/user" class="btn btn-info mr-3">Go Back</a>
		<a href="/user/dom_help/new" class="btn btn-success">Register New Domestic Help</a>
	</div>
</div>
<%- include("../../partials/footer") %>
