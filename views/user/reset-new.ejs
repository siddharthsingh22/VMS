<%- include("../partials/header", {loggedIn : false}) %>
<div class="container">
	<div class="row" style="display: flex; justify-content: center;">
		<div class="col-md-4">
			<div class="p-3 pb-4 mt-5" style="border: 1px solid rgba(0, 0, 0, 0.1); background-color: #e4e4e4;">
				<h1 class="display-4 mb-4 text-center">Reset Password</h1>
				<% if(error){ %>
				<div class="alert alert-danger text-center" role="alert">
					<%= error %>
				</div>
				<% } %>
				<form action="/user/reset-new/<%= email %>" method="POST" style="width: 100%;">
					<div class="form-group">
						<input type="password" name="reset[password]" placeholder="New password" class="form-control" required />
					</div>
					<div class="form-group">
						<input type="password" name="reset[confirmPassword]" placeholder="Re-enter new password" class="form-control" required />
					</div>

					<button type="submit" class="btn btn-block btn-success">
						Update
					</button>
				</form>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
