<%- include("../partials/header", {loggedIn : false}) %>
<div class="container">
	<div class="row" style="display: flex; justify-content: center;">
		<div class="col-md-4">
			<div class="p-3 pb-4 mt-5" style="border: 1px solid rgba(0, 0, 0, 0.1); background-color: #e4e4e4;">
				<h1 class="display-4 mb-4 text-center">Reset Password</h1>
				<form action="/user/reset" method="POST" style="width: 100%;">
					<div class="alert alert-success text-center" role="alert">
						If user exists, a password reset link would be sent to the email
					</div>

					<div class="form-group">
						<input type="text" name="reset[email]" placeholder="Email Address" class="form-control" required />
					</div>

					<button type="submit" class="btn btn-block btn-success">
						Update
					</button>
					<a href="/user/login" class="btn btn-block btn-info">Login</a>
				</form>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
