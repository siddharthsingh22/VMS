<%- include("../partials/header", {loggedIn : false}) %>
<div class="container">
	<div class="row" style="display: flex; justify-content: center;">
		<div class="col-md-5">
			<div  id="register-box" class="p-3 pb-4 mt-5" >
				<h1 class="display-4 mb-4 text-center">Register</h1>
				<form action="/user/register" method="POST" style="width: 100%;">
					<% if(error){ %>
					<div class="alert alert-danger text-center" role="alert">
						<%= error %>
					</div>
					<% } %>

					<div class="form-group">
						<input id="form-input" type="text" name="register[email]" placeholder="Email Address" class="form-control" required />
					</div>
					<div class="form-group">
						<input id="form-input" type="text" name="register[name]" placeholder="Name" class="form-control" required />
					</div>
					<div class="form-group">
						<input  id="form-input" type="text" name="register[phoneNo]" placeholder="Phone Number" class="form-control" required />
					</div>
					<div class="form-group">
						<input  id="form-input" type="password" name="register[password]" placeholder="Password" class="form-control" required />
					</div>
					<div class="form-group">
						<input  id="form-input" type="password" name="register[confirmPassword]" placeholder="Re-enter Password" class="form-control" required />
					</div>

					<div  style="display: flex; justify-content: center; align-items: center;">
						<button type="submit" class="btn btn-block btn-success">
							Register
						</button>
						<a id="login-btn" href="/user/login" class="btn btn-block btn-info">Login</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
